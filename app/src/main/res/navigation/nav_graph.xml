<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.noteApp.screens.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_createNoteFragment"
            app:destination="@id/createNoteFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dialogFragmentFilter"
            app:destination="@id/bottomSheetFilter" />
    </fragment>
    <fragment
        android:id="@+id/createNoteFragment"
        android:name="com.example.noteApp.screens.CreateNoteFragment"
        android:label="fragment_create_note"
        tools:layout="@layout/fragment_create_note" />
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.noteApp.screens.EditNoteFragment"
        android:label="EditNoteFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.noteApp.screens.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/bottomSheetFilter"
        android:name="com.example.noteApp.screens.DialogFragmentSort"
        android:label="DialogFragmentFilter" >
        <action
            android:id="@+id/action_bottomSheetFilter_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>