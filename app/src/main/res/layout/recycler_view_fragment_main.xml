<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:orientation="horizontal"
    android:paddingStart="4dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"

        app:srcCompat="@drawable/add_plus_new_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/lower_border"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_main_note_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fontFamily="@font/antic"
            android:text="Buy shoes"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fragment_main_note_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="top"

            android:text="12.05.2021" />
    </LinearLayout>
</LinearLayout>